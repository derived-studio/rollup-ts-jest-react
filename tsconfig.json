{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "plugins": []
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules/", "scripts/", "build/", "dist/", "docs/"]
}
